        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Größe"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.DialogWindowTitle" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="55dp" />

        <Button
            android:layout_width="match_parent"
