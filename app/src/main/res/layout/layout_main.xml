            android:text="Einstellungen"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.SearchResult.Title" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="66dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
